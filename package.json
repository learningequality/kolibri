{
  "name": "kolibri",
  "version": "0.0.1",
  "description": "Kolibri is a Learning Management System / Learning App designed to run on low-power devices, targeting the needs of learners and teachers in contexts with limited infrastructure. A user can install Kolibri and serve the app on a local network, without an internet connection. Kolibri installations can be linked to one another, so that user data and content can be shared. Users can create content for Kolibri and share it when there is network access to another Kolibri installation or the internet.",
  "main": "assets/bundles/kolibri.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "npm run test-mocha && npm run test-karma",
    "test-karma": "karma start --single-run",
    "test-mocha": "mocha assets/test/*.js",
    "coverage": "npm run test-mocha-cov && npm run test-karma-cov",
    "test-mocha-cov": "node ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha assets/test/*.js --report lcovonly -- -R spec",
    "test-karma-cov": "karma start karma.conf.ci.js",
    "build": "webpack",
    "watch": "webpack --config webpack.config.dev.js --watch",
    "ci": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/learningequality/kolibri.git"
  },
  "keywords": [
    "learning",
    "edtech",
    "offline"
  ],
  "author": "Learning Equality",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/learningequality/kolibri/issues"
  },
  "homepage": "https://github.com/learningequality/kolibri#readme",
  "dependencies": {
    "backbone": "^1.3.1",
    "backbone.marionette": "2.4.5",
    "bootstrap": "3.3.6",
    "colors": "^1.1.2",
    "exports-loader": "^0.6.3",
    "fg-loadcss": "^1.2.0",
    "imports-loader": "^0.6.5",
    "handlebars": "4.0.5",
    "istanbul": "^0.4.2",
    "istanbul-instrumenter-loader": "^0.1.3",
    "jshint": "^2.9.1",
    "jshint-loader": "^0.8.3",
    "jquery": "2.2.3",
    "karma": "^0.13.19",
    "karma-coverage": "^0.5.3",
    "karma-jshint-preprocessor": "0.0.6",
    "karma-mocha": "^0.2.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lodash": "^4.6.1",
    "loglevel": "^1.4.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "normalize-css": "^2.3.1",
    "phantomjs-prebuilt": "^2.1.4",
    "rewire": "^2.5.1",
    "rewire-webpack": "^1.0.1",
    "riot": "^2.3.18",
    "riotjs-loader": "^3.0.0",
    "scriptjs": "^2.5.8",
    "sinon": "^2.0.0-pre",
    "temp": "^0.8.3",
    "webpack": "^1.12.12",
    "webpack-bundle-tracker": "0.0.93"
  },
  "devDependencies": {
    "css-loader": "^0.23.1",
    "style-loader": "^0.13.1"
  }
}
