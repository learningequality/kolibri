@font-face
	font-family: 'Noto Sans'
	src: url('https://fonts.googleapis.com/css?family=Noto+Sans&subset=latin')

// color definitions
$kolibri-gray = rgb(105, 105, 105)

// mixin for clearfix, used when dealing with floats. Won't be a problem if we
// float everything
clearfix()
	&:after
		clear: both
		content: ""
		display: block
		height: 0
		visibility: hidden

/*************************Text Input With Tag Display*************************/
// wrapper for tiwtd... not sure about this, should probably get rid of it
.content

// wrapper search with tag widget
.tiwtd
	// keeping at 50% to match initial sketch of this toy page
	width:50%

// all styles regarding the search box
.textInput

	// styles for the text box itself
	input[type=search]
		background-color: transparent
		border-bottom-color: $kolibri-gray
		border-bottom-style: solid
		border-width: 0 0 1px 0
		font-size: 1.2em
		padding: 3px
		width: 100%

		//  styles for the search bar's focus option
		&:focus
			// need to mod focus to be accessible, this is where styles go

// all the styles regerading tags
.tag
	// styles for the tags themselves
	background-color: $kolibri-gray
	border-radius: 4px
	color: white
	display:block
	float:left
	margin: 1px
	// consider making a mixin for this if using for many buttons
	padding: .5em 1em .5em 1em

	// styles for the list that holds all the tags
	&List
		background-attachment:scroll
		background-clip:border-box
		background-color:white
		border-bottom-left-radius:4px
		border-top-left-radius:4px
		box-sizing: border-box
		float:left
		font-family: Noto Sans, sans-serif
		padding: 0

		// styles for the wrap around the tag list
		&wrap
			overflow: auto


