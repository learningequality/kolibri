/**
  * Styles for responsiveness in learn app
  */
@require '~core-theme.styl'


$card-width = 300px
$card-height = 75px
$card-gutter = 20px
$card-presets = 2 3 4
$nav-bar-width = 80px
$tool-bar-height = 40px

width-auto-adjust()
  for $preset in $card-presets
    $min-width = ($card-width * $preset) + ($card-gutter * ($preset - 1))
    @media (min-width:$min-width)
      width: $min-width
